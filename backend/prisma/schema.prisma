generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  firstname String
  lastname  String
  email     String   @unique
  password  String
  Company   Company? @relation(fields: [companyId], references: [id])
  companyId String?
}

model Beneficiary {
  id                   String @id @default(cuid())
  firstname            String
  lastname             String
  email                String @unique
  availableTotalAmount Float  @default(0.0)
  remainingAmount      Float  @default(0.0)
  expense              Float

  transactions Transaction[]
  company      Company?      @relation(fields: [companyId], references: [id])
  companyId    String?
}

model Company {
  id            String        @id @default(cuid())
  name          String        @unique
  beneficiaries Beneficiary[]
  workers       User[]
}

model StationEmploye {
  id        String @id @default(cuid())
  firstname String
  lastname  String
  email     String @unique
  password  String

  station     Station       @relation(fields: [stationId], references: [id])
  stationId   String
  Transaction Transaction[]
}

model Transaction {
  id String @id @default(cuid())

  beneficiary   Beneficiary? @relation(fields: [beneficiaryId], references: [id])
  beneficiaryId String

  stationEmploye   StationEmploye? @relation(fields: [stationEmployeId], references: [id])
  stationEmployeId String
  station          Station?        @relation(fields: [stationId], references: [id])
  stationId        String
}

model Station {
  id   String @id @default(cuid())
  name String

  transactions Transaction[]

  stationEmployes StationEmploye[]

  district   District? @relation(fields: [districtId], references: [id])
  districtId String
}

model District {
  id   String @id @default(cuid())
  name String @unique

  municipality   Municipality? @relation(fields: [municipalityId], references: [id])
  municipalityId String

  stations Station[]
}

model Municipality {
  id   String @id @default(cuid())
  name String @unique

  cities City?  @relation(fields: [cityId], references: [id])
  cityId String

  District District[]
}

model City {
  id   String @id @default(cuid())
  name String @unique

  municipalities Municipality[]
  department     Department?    @relation(fields: [departmentId], references: [id])
  departmentId   String?
}

model Department {
  id   String @id @default(cuid())
  name String @unique

  cities City[]
}

model Admin {
  id        String @id @default(cuid())
  firstname String
  lastname  String
  email     String @unique
  password  String
}
