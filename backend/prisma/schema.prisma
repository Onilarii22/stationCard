generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String @id @default(cuid())
  name                 String
  email                String @unique
  availableTotalAmount Float  @default(0.0)
  remainingAmount      Float  @default(0.0)
  expense              Float
  company              String

  transactions Transaction[]
}

model Employe {
  id       String @id @default(cuid())
  name     String
  email    String @unique
  password String

  station     Station       @relation(fields: [stationId], references: [id])
  stationId   String
  Transaction Transaction[]
}

model Transaction {
  id String @id @default(cuid())

  user   User   @relation(fields: [userId], references: [id])
  userId String

  employe   Employe? @relation(fields: [employeId], references: [id])
  employeId String
  station   Station? @relation(fields: [stationId], references: [id])
  stationId String
}

model Station {
  id   String @id @default(cuid())
  name String

  transactions Transaction[]

  employes Employe[]

  district   District? @relation(fields: [districtId], references: [id])
  districtId String
}

model District {
  id   String @id @default(cuid())
  name String @unique

  municipality   Municipality? @relation(fields: [municipalityId], references: [id])
  municipalityId String

  stations Station[]
}

model Municipality {
  id   String @id @default(cuid())
  name String @unique

  cities City?  @relation(fields: [cityId], references: [id])
  cityId String

  District District[]
}

model City {
  id   String @id @default(cuid())
  name String @unique

  municipalities Municipality[]
  department     Department?    @relation(fields: [departmentId], references: [id])
  departmentId   String?
}

model Department {
  id   String @id @default(cuid())
  name String @unique

  cities City[]
}

model Admin {
  id    String @id @default(cuid())
  name  String
  email String @unique
}
